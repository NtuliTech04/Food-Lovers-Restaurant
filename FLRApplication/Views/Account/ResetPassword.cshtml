@model FLRApplication.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Password Reset";
}
<style>
    .validation-summary-errors ul li {
        list-style: none;
    }
</style>

<div class="content">
    <div class="main">
        <div class="container">
            <div class="register">
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)

                    <div class="register-top-grid">
                        <h3 class="text-danger">Reset Your Password</h3>
                        <div class="wow fadeInRight" data-wow-delay="0.4s">
                            <span class="Input-Label">Email  Address<label>*</label></span>
                            @Html.TextBoxFor(m => m.Email)
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="clearfix"> </div>
                        <a class="news-letter" href="#"></a>
                    </div>
                    <div class="register-bottom-grid">
                        <h3>LOGIN INFORMATION</h3>
                        <div class="wow fadeInLeft" data-wow-delay="0.4s">
                            <span class="Input-Label">New Password<label>*</label></span>
                            @Html.PasswordFor(m => m.Password)
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="wow fadeInRight" data-wow-delay="0.4s">
                            <span class="Input-Label">Confirm Password<label>*</label></span>
                            @Html.PasswordFor(m => m.ConfirmPassword)
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                    <div class="register-but">
                        <input type="submit" value="Reset Password">
                        <div class="clearfix"> </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/ValidateInput")
}
