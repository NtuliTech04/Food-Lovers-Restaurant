@model IEnumerable<FLRApplication.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "NewCategory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCategory", new { id=item.CategID }) |
            @Html.ActionLink("Details", "ViewCategory", new { id=item.CategID }) |
            @Html.ActionLink("Delete", "DeleteCategory", new { id=item.CategID })
        </td>
    </tr>
}

</table>
