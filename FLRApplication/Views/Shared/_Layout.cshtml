<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Food Lover's Restaurant</title>
    <link href="~/Content/Website/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="~/Content/Website/js/jquery.min.js"></script>
    <!-- Custom Theme files -->
    <link href="~/Content/Website/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/Custom/css/fontawesome.min.css" rel="stylesheet" type="text/css" media="all"/>
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <!-- Custom Theme files -->
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script type="application/x-javascript">
        addEventListener("load", function() {
            setTimeout(hideURLbar, 0);
        }, false);
        function hideURLbar(){
            window.scrollTo(0,1);
         }
    </script>
    <!--Animation-->
    <script src="~/Content/Website/js/wow.min.js"></script>
    <link href="~/Content/Website/css/animate.css" rel='stylesheet' type='text/css' />
    <script>
        new WOW().init();
    </script>
    <script type="text/javascript" src="~/Content/Website/js/move-top.js"></script>
    <script type="text/javascript" src="~/Content/Website/js/easing.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1200);
            });
        });
    </script>
</head>

<body>
    <div class="header">
        <div class="container">
            <div class="top-header">
                <div class="logo">
                    <a href="@Url.Action("Index","Home")"><img src="~/Content/Website/images/flr_logo.png" class="img-responsive" alt="" /></a>
                </div>
                <div class="queries">
                    <p>For Queries? Call Us Now!<span>031 390 4800</span> <label>(7AM - 11PM)</label></p>
                </div>
                <div class="header-right">
                    <div class="cart box_1">
                        @if (Session["MenuItemCount"] == null) 
                        {
                            <a href="@Url.Action("ViewCart", "Home")">
                                <h3>
                                    <span class="simpleCart_total"> R0,00 </span>
                                    (<span id="simpleCart_quantity" class="simpleCart_quantity"> 0 </span> items)
                                    <img src="~/Content/Website/images/bag.png" alt="">
                                </h3>
                            </a>

                        }
                        else
                        {
                            <a href="@Url.Action("ViewCart", "Home")">
                                <h3>
                                    <span class="simpleCart_total"> @Session["CartTotal"] </span>
                                    (<span id="simpleCart_quantity" class="simpleCart_quantity"> @Session["MenuItemCount"] </span> items)
                                    <img src="~/Content/Website/images/bag.png" alt="">
                                </h3>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="menu-bar">
            <div class="container">
                <div class="top-menu">
                    <ul>
                        <li class="active"><a href="@Url.Action("Index","Home")">Home</a></li>|
                        <li><a href="@Url.Action("Index","Home")">Restaurant</a></li>|
                        <li><a href="#">About</a></li>|
                        <li><a href="#">contact</a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="login-section">
                    @Html.Partial("_LoginPartial")
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div class="content">
        @RenderBody()
        <div class="contact-section" id="contact">
            <div class="container">
                <div class="contact-section-grids">
                    <div class="col-md-3 contact-section-grid wow fadeInLeft" data-wow-delay="0.4s">
                        <h4>Site Links</h4>
                        <ul>
                            <li><i class="point"></i></li>
                            <li class="data"><a href="#">About Us</a></li>
                        </ul>
                        <ul>
                            <li><i class="point"></i></li>
                            <li class="data"><a href="#">Contact Us</a></li>
                        </ul>
                        <ul>
                            <li><i class="point"></i></li>
                            <li class="data"><a href="#">Privacy Policy</a></li>
                        </ul>
                        <ul>
                            <li><i class="point"></i></li>
                            <li class="data"><a href="#">Terms of Use</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 contact-section-grid wow fadeInLeft" data-wow-delay="0.4s">
                        <h4>Site Links</h4>
                        <ul>
                            <li><i class="point"></i></li>
                            <li class="data"><a href="#">About Us</a></li>
                        </ul>
                        <ul>
                            <li><i class="point"></i></li>
                            <li class="data"><a href="#">Contact Us</a></li>
                        </ul>
                        <ul>
                            <li><i class="point"></i></li>
                            <li class="data"><a href="#">Privacy Policy</a></li>
                        </ul>
                        <ul>
                            <li><i class="point"></i></li>
                            <li class="data"><a href="#">Terms of Use</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 contact-section-grid wow fadeInRight" data-wow-delay="0.4s">
                        <h4>Follow Us On...</h4>
                        <ul>
                            <li><i class="fb"></i></li>
                            <li class="data"> <a href="#"> Facebook</a></li>
                        </ul>
                        <ul>
                            <li><i class="tw"></i></li>
                            <li class="data"> <a href="#">Twitter</a></li>
                        </ul>
                        <ul>
                            <li><i class="in"></i></li>
                            <li class="data"><a href="#"> Linkedin</a></li>
                        </ul>
                        <ul>
                            <li><i class="gp"></i></li>
                            <li class="data"><a href="#">Google Plus</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 contact-section-grid nth-grid wow fadeInRight" data-wow-delay="0.4s">
                        <h4>Subscribe Newsletter</h4>
                        <p>To get latest updates and food deals every week</p>
                        <input type="text" class="text" value="" onfocus="this.value = '';"
                               onblur="if (this.value == '') {this.value = '';}">
                        <input type="submit" value="submit">
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="container">
            <p class="wow fadeInLeft text-center" data-wow-delay="0.4s">
                &copy; @DateTime.Now.Year All Rights Reserved |
                <span>Food Lover's Restaurant</span>
            </p>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });
        });
    </script>
    <a href="#" id="toTop" style="display: block;"> <span id="toTopHover" style="opacity: 1;"> </span></a>
    @*@Scripts.Render("~/bundles/jquery")*@
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>